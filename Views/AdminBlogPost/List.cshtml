@model List<WebBlog.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Posts</h1>
    </div>
</div>

<div class="container py-5">
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
                <td>Tags</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Heading</td>
                    <td>
                        <div class="d-flex">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="badge bg-secondary">@tag.Name</span>
                            }
                        </div>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="AdminBlogPost" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>